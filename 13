#include<stdio.h>
#include<math.h>

int main()
{
    int p,t,r;
    printf("enter principal amount:\n");
    scanf("%d",&p);
    printf("enter time in years:\n");
    scanf("%d",&t);
    printf("enter rate:\n");
    scanf("%d",&r);
    printf("simple interest:%d",p*t*r/100);
    
    return 0;
    
}